{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://newvelles.com/schemas/latest_news.json",
  "title": "Newvelles Latest News",
  "description": "Schema for the latest news visualization data generated by Newvelles",
  "type": "object",
  "patternProperties": {
    "^.+$": {
      "description": "Top-level news group identified by key phrases",
      "type": "object",
      "patternProperties": {
        "^.+$": {
          "description": "Sub-group within the news category",
          "type": "object",
          "patternProperties": {
            "^.+$": {
              "description": "Individual news article",
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "description": "The headline/title of the news article",
                  "minLength": 1
                },
                "link": {
                  "type": "string",
                  "format": "uri",
                  "description": "URL to the full news article"
                },
                "timestamp": {
                  "type": "string",
                  "description": "Publication timestamp in various RSS formats"
                },
                "source": {
                  "type": "string",
                  "format": "uri",
                  "description": "RSS feed source URL"
                }
              },
              "required": ["title", "link", "timestamp", "source"],
              "additionalProperties": false
            }
          },
          "minProperties": 1
        }
      },
      "minProperties": 1
    }
  },
  "minProperties": 1
}
